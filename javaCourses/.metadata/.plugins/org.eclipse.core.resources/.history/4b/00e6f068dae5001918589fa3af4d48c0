package javaImperatif;

public class Tp4 {

	public static void main(String[] args) {

		int price = 1500;
		
		if (price < 1000) {
			// 0%
			price = price;
		} else if ( (price >= 1000) && (price <= 2000) ) {
			// 1%
			price = price + ((price * 1)/1000);
		} else if ( (price >= 2000) && (price <= 5000) ) {
			// 3%
			price = price + ((price * 3)/1000);
		} else if (price >= 5000 ) {
			// 5%		
			price = price + ((price * 5)/1000);
		}
		System.out.println("Prix : " + price);

			
			

	}

}
