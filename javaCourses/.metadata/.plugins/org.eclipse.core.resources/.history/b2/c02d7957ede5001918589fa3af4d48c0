package javaImperatif;

public class Tp7 {

	public static void main(String[] args) {
		// Affichage des n nombres premier

		// int choice = Integer.parseInt(args[0]);

		isPrime(14);
	}

	/**
	 * Is is a prime number
	 * 
	 * @param numberChoosen
	 * @return
	 */
	public static boolean isPrime(int numberChoosen) {

		// if not divisible by himself -> skip it
		if (numberChoosen % numberChoosen == 0) {
			for (int i = 1; i < numberChoosen; i++) {
				// not a prime number, can be divided by somthing elsesp
				if (numberChoosen % i == 0) {
					return false;
				}
			}
			return true;
		}
		return false;

//		if (( numberChoosen % numberChoosen == 0) && !( numberChoosen %  ) ){
//					
//			System.out.println("Nombre premier");
//			return true;
//		} else
//			System.out.println("FAUX");
//			return false;
	}

}
