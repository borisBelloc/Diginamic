package javaImperatif;

public class Tp7 {

	/**
	 * Display the x prime number
	 * @param args
	 */
	public static void main(String[] args) {

		//int choice = Integer.parseInt(args[0]);

		isPrime2(2);
	}

	/**
	 * Is it a prime number
	 * 
	 * @param numberChoosen
	 * @return
	 */
	public static boolean isPrime(int numberChoosen) {

		if (numberChoosen > 1) {
			for (int i = 1; i < numberChoosen; i++) {
				// not a prime number, can be divided by something else
				if ((i != 1) && (i != numberChoosen) && (numberChoosen % i == 0)) {
					System.out.println("NON");
					return false;
				}
			}
			System.out.println("oui");
			return true;
		} else 
			// prime number start at 2
			System.out.println("non; <2 ");
			return false;
			
			

//		if (( numberChoosen % numberChoosen == 0) && !( numberChoosen %  ) ){
//					
//			System.out.println("Nombre premier");
//			return true;
//		} else
//			System.out.println("FAUX");
//			return false;
	}
	
	public static boolean isPrime2(int numberChoosen) {

		if (numberChoosen > 1) {
			// prime number start at 2
			for (int i = 2; i < numberChoosen - 1; i++) {
				// not a prime number, can be divided by something else
				if (numberChoosen % i == 0) {
					System.out.println("NON");
					return false;
				}
			}
			System.out.println("oui");
			return true;
		} else 
			// prime number start at 2
			System.out.println("non; <2 ");
			return false;
			
			

	}

}
