package javaImperatif;

public class BubbleSort {

	public static void main(String[] args) {

		int tab[] = { 51, 4, 20, 3 };
		boolean isChanged = true;

		while (isChanged) {
			for (int i = 0; i <= tab.length; i++) {
				for (int j = 0; (j <= tab.length - 1 - i); j++) {

					if (tab[j] > tab[j + 1]) {
						int tempStock = tab[j];
						tab[j] = tab[j + 1];
						tab[j + 1] = tempStock;

						isChanged = true;

					}
				}

			}

		}
		
		
		

	}
}

